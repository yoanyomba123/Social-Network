extends layout

block content
    br
    .container
        h1(class="text-center") #{article.title}
        hr
        h5(class="text-center") Written by : #{article.author}
        br
        p(class="text-center") #{article.body}
        hr
        a.btn.btn-primary(href='/article/edit/'+article._id) Edit 
        a.btn.btn-danger.delete-article(href='/', data-id = article._id) Delete